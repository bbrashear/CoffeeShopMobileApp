<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Espresso.Pages.ReservationPage" BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout Margin="10">
            <Entry x:Name="EntName" Placeholder="Name"/>
            <Entry x:Name="EntEmail" Placeholder="Email"/>
            <Entry x:Name="EntPhone" Placeholder="Phone"/>
            <Entry x:Name="EntTotalPeople" Placeholder="Total People"/>
            <Label Text="Booking Date"/>
            <DatePicker x:Name ="DpBookingDate" Format="D"></DatePicker>
            <Label Text="Booking Time"/>
            <TimePicker x:Name ="TpBookingTime"></TimePicker>
            <Button x:Name="BtnBookTable" Clicked="BtnBookTable_Clicked" Text="Book Table" TextColor="White" FontSize="Medium" BackgroundColor="Red"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>